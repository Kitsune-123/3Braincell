<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="../css/register.css" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />
    <title>Register</title>
  </head>

  <body>
    <div class="container-fluid">
      <div class="register-box">
        <div class="header-container">
          <h2>Register</h2>
          <button type="button" class="btn-close" aria-label="Close" id="closeButton"></button>
        </div>

        <div class="container">
          <form action="/register" method="post">
            <div class="firstname">
              <label for="fname">First name<span>*</span></label
              ><br />
              <input
                type="text"
                id="fname"
                name="fname"
                required
                placeholder="Enter your firstname"
              /><br />
            </div>

            <div class="lastname">
              <label for="lname">Last name<span>*</span></label
              ><br />
              <input
                type="text"
                id="lname"
                name="lname"
                required
                placeholder="Enter your lastname"
              /><br />
            </div>
            <div class="email">
              <label for="email">Email<span>*</span></label
              ><br />
              <input
                type="text"
                id="email"
                name="email"
                required
                placeholder="Enter your email"
              /><br />
            </div>
            <div class="passwords">
              <label for="password">Password<span>*</span></label
              ><br />
              <input
                type="password"
                id="pwd"
                name="pwd"
                required
                placeholder="Enter your password"
              /><br />
            </div>
            <div id="explain-1">
              Password must be longer than 6 characters and should contain
              alphanumeric and alphabet
            </div>

            <div class="cfpass">
              <label for="cfpwd">Confirm password<span>*</span></label
              ><br />
              <input
                type="password"
                id="cfpwd"
                name="cfpwd"
                required
                placeholder="Confirm passeord"
              /><br />
            </div>
            <div class="check">
              <input type="checkbox" id="check" name="check" value="check" />
              <label for="condition">
                Would you like to accept
                <span class="condition">term and condition</span>
                <span>*</span>
              </label>
            </div>
            <div class="submit">
              <input type="submit" value="Register" />
            </div>
          </form>
        </div>
      </div>
    </div>

    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
      crossorigin="anonymous"
    ></script>

    <script>

      window.addEventListener("load", function () {
        const isMobile = window.innerWidth <= 576;

        if (!isMobile) {
          // Fetch and include header
          fetch("/partials/header")
            .then((response) => response.text())
            .then((html) => {
              const header = document.createElement("header");
              header.innerHTML = html;
              document.body.insertBefore(header, document.body.firstChild);
            });

          // Fetch and include footer
          fetch("/partials/footer")
            .then((response) => response.text())
            .then((html) => {
              const footer = document.createElement("footer");
              footer.innerHTML = html;
              document.body.appendChild(footer);
            });
        }
      });
    </script>

    <script>
      // Media query to hide header and footer in mobile view
      const styleSheet = document.styleSheets[0];
      styleSheet.insertRule(
        "@media (max-width: 767px) { header, footer { display: none; } }",
        styleSheet.cssRules.length
      );

      //close button
      document.getElementById("closeButton").addEventListener("click", function() {
      window.location.href = "../home"; 
      });
    </script>
  </body>
</html>
