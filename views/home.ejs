<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="../css/home.css">
  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65" crossorigin="anonymous">
  <title>Home</title>
</head>
<body>
  <!-- header -->
  <header>
    <%- include('partials/header')%>
  </header>
  
  <!-- Slide Bar -->
  <div id="carouselExampleIndicators" class="carousel slide" data-bs-ride="true">
    <div class="carousel-indicators">
      <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
      <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="1" aria-label="Slide 2"></button>
      <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="2" aria-label="Slide 3"></button>
    </div>
    <div class="carousel-inner">
      <div class="carousel-item active">
        <img src="../img/poster/1.png" class="d-block w-100" alt="poster1">
      </div>
      <div class="carousel-item">
        <img src="../img/poster/2.png" class="d-block w-100" alt="poster2">
      </div>
      <div class="carousel-item">
        <img src="../img/poster/3.png" class="d-block w-100" alt="poster3">
      </div>
    </div>
    <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="prev">
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      <span class="visually-hidden">Previous</span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="next">
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
      <span class="visually-hidden">Next</span>
    </button>
  </div>

  <!-- newArrivals -->
  <section id="newArrivals">
    <div class="container-fluid">
      <div class="new-arrivals">NEW ARRIVALS</div>
      <div class="get-moving-get-grooving-get-shopping">
        Get Moving, Get Grooving, Get Shopping!
      </div>
    </div>
  </section>

  <!-- newArrivals slide-->
  <section class="p-slide">
    <div class="glider-contain">
      <div class="first-slider">
          <!--new products-->
          <%- include('products/newArrivals')%>
      </div>
    </div>
  </section>    
  
    
    <!-- best seller -->
    <section id="bestSeller">
      <div class="container-fluid">
        <div class="best-seller">BEST SELLER</div>
      </div>
    </section>
  
    <!-- slide best seller -->
    <section class="p-slide">
      <div class="glider-contain">
        <div class="second-slider">
            
          <%- include('products/bestSeller')%>

        </div>
      </div>
    </section>

  <!-- trending -->
  <section id="trendingID">
    <div class="container-fluid">
      <div class="trending">TRENDING</div>
    </div>
  </section>

  <!-- slide trending -->
  <section id="slide-trendingID">
    <div class="container-fluid">
      <div class="slide-trending">
        <img class="image-2" src="img/poster/image 2.png" />
        <img class="image-1" src="/img/poster/image 1.png" />
        <img class="image-4" src="/img/poster/image 4.png" />
        <a href="../allWomen" class="rectangle-5">
          <div class="shop">Shop</div>
        </a>
        <a href="../allMen" class="rectangle-52">
          <div class="shop2">Shop</div>
        </a>
        <a href="../allKids" class="rectangle-53">
          <div class="shop3">Shop</div>
        </a>
        <div class="step-into-strength-women-s-exercise-shoes-for-every-journey">
          Step into Strength: Women&#039;s Exercise Shoes for Every Journey
        </div>
        <div
          class="join-the-movement-feel-look-perform-your-best-in-clothes-designed-to-move-with-you"
        >
          Join the movement! Feel, look, perform your best in clothes designed to move
          with you.
        </div>
        <div class="playtime-champions-deserve-epic-gear">
          Playtime champions
          <br />
          deserve epic gear!
        </div>
      </div>      
    </div>
  </section>

  <!-- promotion -->
  <section id="promotionID">
    <div class="container-fluid">
      <div class="promotion">PROMOTION</div>
    </div>
  </section>

  <!-- promotion photo -->
  <section id="promotion-photoID">
    <div class="container-fluid">
      <img class="promotion-photo" src="/img/poster/4.png" />
    </div>
  </section>


  <!-- why shop with us -->
  <section id="why-shop-with-usID">
    <div class="container-fluid">
      <div class="why-shop-with-us">WHY SHOP WITH US</div>
    </div>
  </section>

  <!-- why shop with us info-->
  <section id="why-shop-with-us-infoID">
    <div class="container-fluid">
      <div class="frame-1">
        <div class="row">
          <div class="col-lg-3 col-md-6 col-sm-6">
            <div class="container">
              <img class="image-11" src="/img/icon/target.png" />
              <div class="diverse-product-range">Diverse Product Range</div>
              <div class="we-offer-varied-high-quality-sports-gear">
                We offer varied, high-quality sports gear
              </div>
            </div>
          </div>
          <div class="col-lg-3 col-md-6 col-sm-6">
            <div class="container">
              <img class="image-8" src="/img/icon/quality.png" />
              <div class="competitive-prices">Competitive Prices</div>
              <div class="providing-affordability-with-competitive-pricing">
                Providing affordability with competitive pricing
              </div>
            </div>
          </div>
          <div class="col-lg-3 col-md-6 col-sm-6">
            <div class="container">
              <img class="image-9" src="/img/icon/diversity.png" />
              <div class="customer-centric-experience">Customer-Centric Experience</div>
              <div class="prioritizing-user-satisfaction-with-responsive-service">
                Prioritizing user satisfaction with responsive service
              </div>
            </div>
          </div>
          <div class="col-lg-3 col-md-6 col-sm-6">
            <div class="container">
              <img class="image-10" src="/img/icon/best-price.png" />
              <div class="trusted-quality-and-brands">Trusted Quality and Brands</div>
              <div class="emphasizing-renowned-brands-and-durable-products">
                Emphasizing renowned brands and durable products
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>  

  <!-- footer category -->
  <section id="footer-categoryID">
    <div class="container-fluid">
      <div class="footer-category">
        <div class="row">
          <div class="col-lg-4 col-4">
            <div class="men">MEN</div>
            <div><a href="../allMen" class="all-men-s">All Men’s</a></div>
            <div><a href="../men-shoes" class="shoes">Shoes</a></div>
            <div><a href="../men-shirt" class="shirt">Shirt</a></div>
            <div><a href="../men-shorts" class="shorts">Shorts</a></div>
          </div>          
          <div class="col-lg-4 col-4">
            <div class="women">WOMEN</div>
            <div><a href="../allWomen" class="all-women-s">All Women’s</a></div>
            <div><a href="../women-shoes" class="shoes2">Shoes</a></div>
            <div><a href="../women-shirt" class="shirt2">Shirt</a></div>
            <div><a href="../women-shorts" class="shorts2">Shorts</a></div>
          </div>
          <div class="col-lg-4  col-4">
            <div class="kids">KIDS</div>     
            <div><a href="../allKids" class="all-kids">All kids</a></div>
            <div><a href="../kids-shoes" class="shoes3">Shoes</a></div>
            <div><a href="../kids-clothing" class="clothing">Clothing</a></div>
            <div><a href="../kids-accessory" class="accessory">Accessory</a></div>
          </div>
      </div>
    </div>
  </section>
  
  <!-- footer -->
  <%- include('partials/footer');%>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-kenU1KFdBIe4zVF0s0G1M5b4hcpxyD9F7jL+jjXkk+Q2h455rYXK/7HAuoJl+0I4" crossorigin="anonymous"></script>
  <script src="https://cdn.jsdelivr.net/npm/glider-js@1/glider.min.js"></script>
  <script>
    // Initialize Glider for the first slider
    new Glider(document.querySelector('.first-slider'), {
        slidesToShow: 4,
        slidesToScroll: 5,
        draggable: true,
        dots: '.dots',
        responsive: [
            {
                // screens greater than or equal to 1200px
                breakpoint: 1200,
                settings: {
                    slidesToShow: 4,
                    slidesToScroll: 2,
                    itemWidth: 150,
                    duration: 0.25
                }
            },
            {
                // screens greater than or equal to 900px
                breakpoint: 900,
                settings: {
                    slidesToShow: 3,
                    slidesToScroll: 1,
                    itemWidth: 150,
                    duration: 0.25
                }
            },
            {
                // screens greater than or equal to 640px
                breakpoint: 640,
                settings: {
                    slidesToShow: 2,
                    slidesToScroll: 1,
                    itemWidth: 150,
                    duration: 0.25
                }
            }
        ]
    });

    // Initialize Glider for the second slider
    new Glider(document.querySelector('.second-slider'), {
        slidesToShow: 4,
        slidesToScroll: 5,
        draggable: true,
        dots: '.dots',
        responsive: [
            {
                // screens greater than or equal to 1200px
                breakpoint: 1200,
                settings: {
                    slidesToShow: 4,
                    slidesToScroll: 2,
                    itemWidth: 150,
                    duration: 0.25
                }
            },
            {
                // screens greater than or equal to 900px
                breakpoint: 900,
                settings: {
                    slidesToShow: 3,
                    slidesToScroll: 1,
                    itemWidth: 150,
                    duration: 0.25
                }
            },
            {
                // screens greater than or equal to 640px
                breakpoint: 640,
                settings: {
                    slidesToShow: 2,
                    slidesToScroll: 1,
                    itemWidth: 150,
                    duration: 0.25
                }
            }
        ]
    });
</script>


</body>
</html>