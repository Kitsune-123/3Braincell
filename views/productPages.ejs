<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="../css/ProductPage.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65" crossorigin="anonymous">
    <link href='https://unpkg.com/boxicons@2.1.2/css/boxicons.min.css' rel='stylesheet'>
</head>

<body>
  <header>
    <%- include('partials/header')%>
  </header>
  <div class="container-fluid">
    <div class="row">
      <!--== pic ==-->
        <div class="col-lg-7 col-md-12 col-sm-12">
            <div class="container" style="margin: 5% 10% 3% 0;">
              <div class="pro-img-details">
                <%= products.forEach(product => { %>
                <img src="<%= product.image %>" >
                <% }); %>
            </div>
            </div>
        </div>
    
      <!--== info ==-->
        <div class="col-lg-5 col-md-12 col-sm-12">
            <div class="container" style="margin: 10%; width: 300px;">
              <% products.forEach(product => { %>
                <div class="name" ><%= product.product_name %></div>
                <div class="men-s-shirt" ><%= product.description %></div>
                <div class="product-info-price <%= product.discount > 0 ? 'product-info-price-discount' : 'product-info-price' %>" >$<%= product.price %></div>
                <span class="divider"></span>
            <% }); %>
            

              <!--== color ==-->
              <div class="product-color">
                <h4>Color</h4>
                <div class="color-layout">
                    <input type="radio" id="black" name="color" value="black" class="color-input">
                    <label for="black" class="black"></label>
                    
                    <input type="radio" id="red" name="color" value="red" class="color-input">
                    <label for="red" class="red"></label>
            
                    <input type="radio" id="blue" name="color" value="blue" class="color-input">
                    <label for="blue" class="blue"></label>
                </div>
            </div>
            
            <!--== size ==-->
            <div class="product-size">
              <h4>Size</h4>
              <div class="size-layout">
                  <input type="radio" name="size" value="S" id="1" class="size-input">
                  <label for="1" class="size">S</label>

                  <input type="radio" name="size" value="M" id="2" class="size-input">
                  <label for="2" class="size">M</label>

                  <input type="radio" name="size" value="L" id="3" class="size-input">
                  <label for="3" class="size">L</label>

                  <input type="radio" name="size" value="XL" id="4" class="size-input">
                  <label for="4" class="size">XL</label>

                  <input type="radio" name="size" value="XXL" id="5" class="size-input">
                  <label for="5" class="size">XXL</label>
              </div>
          </div>
          <span class="divider"></span>

          <!--== button ==-->
          <% products.forEach(product => { %>
            <div class="product-btn-group">
              <form action="/addToCart" method="post" class="add-to-cart-form">
                <input type="hidden" name="productId" value="<%= product.product_id %>">
                <button type="submit" class="button add-cart" style="text-decoration: none;">
                  <i class='bx bxs-cart'></i> Add to Cart
                </button>
              </form>
            </div>
          <% }); %>              
                
        </div>
          
        </div>
      
  </div>
        
      </div>
      
      <footer>
        <%- include('partials/footer');%>
      </footer>
      

      <script src="https://cdn.jsdelivr.net/npm/glider-js@1/glider.min.js"></script>
      <script>
        // Initialize Glider for the first slider
        new Glider(document.querySelector('.slider-productPage'), {
            slidesToShow: 4,
            slidesToScroll: 5,
            draggable: true,
            dots: '.dots',
            responsive: [
                {
                    // screens greater than or equal to 1200px
                    breakpoint: 1200,
                    settings: {
                        slidesToShow: 4,
                        slidesToScroll: 2,
                        itemWidth: 150,
                        duration: 0.25
                    }
                },
                {
                    // screens greater than or equal to 900px
                    breakpoint: 900,
                    settings: {
                        slidesToShow: 3,
                        slidesToScroll: 1,
                        itemWidth: 150,
                        duration: 0.25
                    }
                },
                {
                    // screens greater than or equal to 640px
                    breakpoint: 640,
                    settings: {
                        slidesToShow: 2,
                        slidesToScroll: 1,
                        itemWidth: 150,
                        duration: 0.25
                    }
                }
            ]
        });
        </script>
       
      
</body>
</html>